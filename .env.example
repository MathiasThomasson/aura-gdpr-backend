# Example environment variables for local development
# Copy this file to `.env` and fill in secure values.

# Security / JWT
SECRET_KEY=replace-this-with-a-secure-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database (async driver for runtime; Alembic will use the same URL)
DATABASE_URL=postgresql+asyncpg://aura:YOURPASSWORD@127.0.0.1:5432/auradb
SECRET_KEY=changeme

# CORS (comma-separated or "*" for all)
CORS_ORIGINS=http://localhost:3000,https://example.com

# AI / Ollama configuration
OLLAMA_BASE_URL=http://localhost:11434
AI_MODEL=llama3.2:1b
AI_RATE_LIMIT_WINDOW_SECONDS=60
AI_RATE_LIMIT_MAX_REQUESTS=30
AI_RATE_LIMIT_TTL_SECONDS=300
AI_REQUEST_TIMEOUT_SECONDS=30
AI_RETRY_ATTEMPTS=2
AI_RETRY_BACKOFF_SECONDS=0.5

# AI audit policy (avoid storing raw input/PII by default)
AI_AUDIT_STORE_INPUT=false
AI_AUDIT_INPUT_MAX_LENGTH=512

# Circuit breaker settings for AI calls
AI_CB_FAILURE_THRESHOLD=5
AI_CB_COOLDOWN_SECONDS=30
AI_CB_HISTORY_MAX=50

# Optional admin override token (e.g., for privileged maintenance endpoints)
ADMIN_OVERRIDE_TOKEN=
